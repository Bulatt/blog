<%= form_for @post do |f| %>
  <%= render 'shared/error_messages' %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, size: "90x20" %>
  </p>
 
  <p>
    <%= f.submit "Save post", class: "btn" %>
  </p>
<% end %>