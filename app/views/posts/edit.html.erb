<% provide(:title, "Edit post") %>
<h1>Edit post</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
  <%= render 'shared/error_messages' %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, size: "90x20" %>
  </p>
 
  <p>
    <%= f.submit "Save post", class: "btn" %>
  </p>
<% end %>